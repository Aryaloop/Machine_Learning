import cv2
import numpy as np

# Buat gambar kosong untuk diuji
img = np.zeros((500, 500, 3), dtype="uint8")
cv2.putText(img, "OpenCV Test", (50, 250), cv2.FONT_HERSHEY_SIMPLEX, 1, (255, 255, 255), 2)

# Tampilkan gambar
cv2.imshow("Test Window", img)
cv2.waitKey(0)
cv2.destroyAllWindows()
